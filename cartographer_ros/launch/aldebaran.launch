<launch>

  <param name="/use_sim_time" value="true" />

  <!-- TODO: remove -->
  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher"
    args="0 0 0 0 0 0 1 cartographer lidar" /> -->

  <node name="pointcloud_converter" type="point_cloud_converter_node" pkg="point_cloud_converter">
    <remap from="points_in" to="/horizontal_laser_2d" />
    <remap from="points2_out" to="/points2" />
  </node>

  <param name="robot_description"
    textfile="$(find cartographer_ros)/urdf/aldebaran.urdf" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <node name="cartographer_node" pkg="cartographer_ros"
    type="cartographer_node"
    args="-configuration_directory $(find cartographer_ros)/configuration_files
          -configuration_basename aldebaran.lua"
    output="screen">
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
    type="cartographer_occupancy_grid_node" args="-resolution 0.05 -publish_period_sec 0.067" />

  <node name="rviz" pkg="rviz" type="rviz" required="true"
    args="-d $(find cartographer_ros)/configuration_files/aldebaran.rviz" />
  <node name="playbag" pkg="rosbag" type="play"
    args="$(arg bag_filename) --pause --clock --start=$(arg start) --topics horizontal_laser_2d" />

</launch>
